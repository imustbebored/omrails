<h2>Sign in</h2>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
 <div class="form-horizontal"> <%= f.input :email, placeholder: 'Email', input_html: { class: 'col-sm-3' } %>
 </div>
 <div class="form-horizontal">
  <%= f.input :password, placeholder: 'Password', input_html: { class: 'col-sm-3' } %>
</div>
  <% if devise_mapping.rememberable? -%>
 <div class="form-horizontal">
  <%= f.input :remember_me, as: :boolean, input_html: { class: 'col-sm-2' } %>
</div>
  <% end -%>
  <div class="form-horizontal">
 	<%= f.submit "Sign in", class: "btn btn-primary" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>